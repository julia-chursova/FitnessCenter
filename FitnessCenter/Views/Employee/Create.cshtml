    @Scripts.Render("~/bundles/fileupload")
    <script type="text/javascript">
        $(function () {
            $('#fileupload').fileupload({
                url: '@Url.Action("PostImg","Employee")',
                done: function (e, data) {
                    $('#imgContent').append(data.result);
                }
            });
        });
