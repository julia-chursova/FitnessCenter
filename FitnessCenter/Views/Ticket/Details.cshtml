@model FitnessCenter.Entities.Ticket

<div>
    <h4>Клубная карта</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <dl class="dl-horizontal">
        <dt>
            Название
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Стоимость
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>

        <dt>
            Время посещения (с)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AvailableFrom)
        </dd>

        <dt>
            Время посещения (по)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AvailableTo)
        </dd>

        <dt>
            Срок действия
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration) месяц(месяцев)
        </dd>

    </dl>
</div>
<p>
    @if (FitnessCenter.Models.HtmlHelpers.SecurityTrim(FitnessCenter.Entities.Roles.Manager)){@Html.ActionLink("Редактировать", "Edit", new {  id = Model.Id  })} |
    @if (Request.IsAuthenticated)
    { @Html.ActionLink("Заказать", "Order", new { id = Model.Id }, null)} |
    @Html.ActionLink("Назад", "Index")
</p>
