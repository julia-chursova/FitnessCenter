@model IEnumerable<FitnessCenter.Entities.Room>

@{
    ViewBag.Title = "Залы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Залы</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Расписание", "TimetableRoom", "Report", new { roomID = item.ID }, null)
        </td>
    </tr>
}

</table>
